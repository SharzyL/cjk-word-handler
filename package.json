{
    "name": "cjk-word-handler",
    "displayName": "CJK Word Handler",
    "description": "Better CJK word handling on cursor movement",
    "version": "1.0.0",
    "publisher": "sharzyl",
    "repository": {
        "type": "git",
        "url": "https://github.com/sharzyl/cjk-word-handler.git"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "extensionKind": [
        "ui"
    ],
    "license": "Zlib",
    "badges": [
        {
            "url": "https://vsmarketplacebadge.apphb.com/rating-short/sgryjp.japanese-word-handler.svg",
            "href": "https://marketplace.visualstudio.com/items?itemName=sgryjp.japanese-word-handler",
            "description": "Rating (VS Marketplace)"
        },
        {
            "url": "https://vsmarketplacebadge.apphb.com/installs-short/sgryjp.japanese-word-handler.svg",
            "href": "https://marketplace.visualstudio.com/items?itemName=sgryjp.japanese-word-handler",
            "description": "Number of installations (VS Marketplace)"
        },
        {
            "url": "https://ci.appveyor.com/api/projects/status/eqclfgbaefm5npt8/branch/master?svg=true",
            "href": "https://ci.appveyor.com/project/sgryjp/japanese-word-handler/branch/master",
            "description": "Build status"
        },
        {
            "url": "https://img.shields.io/badge/license-zlib-lightgrey.svg?longCache=true&style=popout",
            "href": "https://github.com/sgryjp/japanese-word-handler/blob/master/LICENSE",
            "description": "zlib License"
        }
    ],
    "activationEvents": [
        "onCommand:cjkWordHandler.cursorWordEndRight",
        "onCommand:cjkWordHandler.cursorWordEndRightSelect",
        "onCommand:cjkWordHandler.cursorWordStartLeft",
        "onCommand:cjkWordHandler.cursorWordStartLeftSelect",
        "onCommand:cjkWordHandler.deleteWordEndRight",
        "onCommand:cjkWordHandler.deleteWordStartLeft"
    ],
    "main": "./out/extension",
    "contributes": {
        "keybindings": [
            {
                "command": "cjkWordHandler.cursorWordEndRight",
                "key": "ctrl+right",
                "mac": "alt+right",
                "when": "editorTextFocus"
            },
            {
                "command": "cjkWordHandler.cursorWordEndRightSelect",
                "key": "ctrl+shift+right",
                "mac": "alt+shift+right",
                "when": "editorTextFocus"
            },
            {
                "command": "cjkWordHandler.cursorWordStartLeft",
                "key": "ctrl+left",
                "mac": "alt+left",
                "when": "editorTextFocus"
            },
            {
                "command": "cjkWordHandler.cursorWordStartLeftSelect",
                "key": "ctrl+shift+left",
                "mac": "alt+shift+left",
                "when": "editorTextFocus"
            },
            {
                "command": "cjkWordHandler.deleteWordEndRight",
                "key": "ctrl+delete",
                "mac": "alt+delete",
                "when": "editorTextFocus && !editorReadonly"
            },
            {
                "command": "cjkWordHandler.deleteWordStartLeft",
                "key": "ctrl+backspace",
                "mac": "alt+backspace",
                "when": "editorTextFocus && !editorReadonly"
            }
        ],
        "configuration": {
            "title": "CJK word handler",
            "properties": {
                "cjkWordHandler.chinesePartitioningRule": {
                    "type": "string",
                    "description": "How Chinese text is partitioned when use ctrl shortcut",
                    "enum": [
                        "By characters",
                        "By words",
                        "By sentences"
                    ],
                    "default": "By words"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "lint": "node ./node_modules/tslint/bin/tslint -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.29",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.59",
        "bluebird": "^3.7.2",
        "segment": "^0.1.3",
        "tslint": "^5.20.1",
        "typescript": "^2.9.2",
        "vscode": "^1.1.36"
    }
}
